<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AtacadaoISV.TextFormInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Theme.AtacadaoISV.TextFormInputItem" parent="Theme.AtacadaoISV.TextFormInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/form_input_background</item>
    </style>

    <style name="Theme.AtacadaoISV.BTN" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/button_background</item>
    </style>
</resources>